<!-- Top Navigation Bar -->
<div id="main_header">
	<div class="main_list_left">
		<ul>
			<li><a href="game.php?page=changelog" title="Version {{ VERSION|replace({'.git':''}) }}" class="sci-badge sci-badge--cyan" style="padding: var(--spacing-sm) var(--spacing-md);">
				<i class="fas fa-code-branch"></i> v{{ VERSION|replace({'.git':''}) }}
			</a></li>
			<li><a href="game.php?page=overview" title="{{ LNG.lm_overview }}"><i class="fas fa-home"></i></a></li>
			{% if isModuleAvailable(constant('MODULE_IMPERIUM')) %}
			<li><a href="game.php?page=imperium" title="{{ LNG.lm_imperium }}"><i class="fas fa-globe"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_STATISTICS')) %}
			<li><a href="game.php?page=statistics" title="{{ LNG.lm_statistics }}"><i class="fas fa-chart-pie"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_BATTLEHALL')) %}
			<li><a href="game.php?page=battleHall" title="{{ LNG.lm_battlehall }}"><i class="fas fa-crosshairs"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_RECORDS')) %}
			<li><a href="game.php?page=records" title="{{ LNG.lm_records }}"><i class="fas fa-trophy"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_SEARCH')) %}
			<li><a href="game.php?page=search" title="{{ LNG.lm_search }}"><i class="fas fa-search"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_MESSAGES')) %}
			<li style="position: relative;">
				<a href="game.php?page=messages" title="{{ LNG.lm_messages }}">
					<i class="fas fa-envelope"></i>
					{% if new_message > 0 %}
					<span id="newmes">{% if new_message > 99 %}99+{% else %}{{ new_message }}{% endif %}</span>
					{% endif %}
				</a>
			</li>
			{% endif %}
		</ul>
	</div>

	<div id="planetSelectorWrapper">
		<a href="?cp={{ previousPlanet }}" class="sci-btn sci-btn--ghost" style="padding: var(--spacing-sm); min-width: 36px; height: 36px;">
			<i class="fas fa-chevron-left"></i>
		</a>
		<label for="planetSelector" class="textForBlind">Planet Selection</label>
		<select id="planetSelector">
			{% for key, value in PlanetSelect %}
			<option value="{{ key }}"{% if key == current_pid %} selected{% endif %}>{{ value }}</option>
			{% endfor %}
		</select>
		<a href="?cp={{ nextPlanet }}" class="sci-btn sci-btn--ghost" style="padding: var(--spacing-sm); min-width: 36px; height: 36px;">
			<i class="fas fa-chevron-right"></i>
		</a>
	</div>

	<div class="main_list_right">
		<ul>
			{% if isModuleAvailable(constant('MODULE_TECHTREE')) %}
			<li><a href="game.php?page=techtree" title="{{ LNG.lm_techtree }}"><i class="fas fa-flask"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_BUDDYLIST')) %}
			<li><a href="game.php?page=buddyList" title="{{ LNG.lm_buddylist }}"><i class="fas fa-user-friends"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_BANLIST')) %}
			<li><a href="game.php?page=banList" title="{{ LNG.lm_banlist }}"><i class="fas fa-user-times"></i></a></li>
			{% endif %}
			{% if hasBoard %}
			<li><a href="game.php?page=board" target="forum" title="Forum"><i class="fas fa-comment-alt"></i></a></li>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_CHAT')) %}
			<li><a href="game.php?page=chat" title="{{ LNG.lm_chat }}"><i class="fas fa-comments"></i></a></li>
			{% endif %}
			<li><a href="game.php?page=questions" title="{{ LNG.lm_faq }}"><i class="fas fa-question-circle"></i></a></li>
			<li><a href="game.php?page=settings" title="{{ LNG.lm_settings }}"><i class="fas fa-cog"></i></a></li>
			<li><a href="game.php?page=logout" title="{{ LNG.lm_logout }}" style="border-color: var(--color-accent-red); color: var(--color-accent-red);">
				<i class="fas fa-power-off"></i>
			</a></li>
		</ul>
	</div>
</div>