<!-- SmartMoons Sci-Fi Header -->
<div id="top-header" class="sci-fi-header">
	<div class="header-container">
		<!-- Left Section: Logo & Burger Menu -->
		<div class="header-left">
			<button id="sidebar-toggle" class="burger-menu" aria-label="Toggle Menu">
				<span class="burger-line"></span>
				<span class="burger-line"></span>
				<span class="burger-line"></span>
			</button>
            <!-- Mobile Navigation Menu (populated from sidebar) -->
            <nav class="mobile-nav" id="mobile-nav" aria-hidden="true">
                <ul>
                    {# Build items from the same logic as sidebar navigation to ensure parity #}
                    <li><a href="game.php?page=overview">{{ LNG.lm_overview }}</a></li>
                    {% if constant('MODULE_BUILDING') is defined and isModuleAvailable(constant('MODULE_BUILDING')) %}
                    <li><a href="game.php?page=buildings">{{ LNG.lm_buildings }}</a></li>
                    {% endif %}
                    {% if constant('MODULE_RESEARCH') is defined and isModuleAvailable(constant('MODULE_RESEARCH')) %}
                    <li><a href="game.php?page=research">{{ LNG.lm_research }}</a></li>
                    {% endif %}
                    {% if constant('MODULE_SHIPYARD_FLEET') is defined and isModuleAvailable(constant('MODULE_SHIPYARD_FLEET')) %}
                    <li><a href="game.php?page=shipyard&amp;mode=fleet">{{ LNG.lm_shipshard }}</a></li>
                    {% endif %}
                    {% if constant('MODULE_SHIPYARD_DEFENSIVE') is defined and isModuleAvailable(constant('MODULE_SHIPYARD_DEFENSIVE')) %}
                    <li><a href="game.php?page=shipyard&amp;mode=defense">{{ LNG.lm_defenses }}</a></li>
                    {% endif %}
                    {% if constant('MODULE_FLEET_TRADER') is defined and isModuleAvailable(constant('MODULE_FLEET_TRADER')) %}
                    <li><a href="game.php?page=fleetTable">{{ LNG.lm_fleet }}</a></li>
                    {% endif %}
                    {% if isModuleAvailable(constant('MODULE_GALAXY')) %}
                    <li><a href="game.php?page=galaxy">{{ LNG.lm_galaxy }}</a></li>
                    {% endif %}
                    {% if isModuleAvailable(constant('MODULE_ALLIANCE')) %}
                    <li><a href="game.php?page=alliance">{{ LNG.lm_alliance }}</a></li>
                    {% endif %}
                    <li><a href="game.php?page=messages">{{ LNG.lm_messages }}</a></li>
                    <li><a href="game.php?page=settings">{{ LNG.lm_options }}</a></li>
                    <li><a href="game.php?page=logout">{{ LNG.lm_logout }}</a></li>
                </ul>
            </nav>
			<a href="game.php?page=overview" class="logo-link">
				<div class="logo-container">
					<i class="fas fa-rocket"></i>
					<span class="logo-text">SmartMoons</span>
				</div>
			</a>
		</div>

		<!-- Center Section: Server Time & Planet Selector -->
		<div class="header-center">
			<div class="server-time">
				<i class="fas fa-clock"></i>
				<span class="servertime" id="servertime">{{ servertime }}</span>
			</div>
			<div class="planet-selector-container">
				<button class="planet-nav-btn prev" onclick="location.href='?cp={{ previousPlanet }}'">
					<i class="fas fa-chevron-left"></i>
				</button>
				<div class="planet-selector">
					<select id="planetSelector" class="planet-dropdown">
						{% for key, value in PlanetSelect %}
						<option value="{{ key }}"{% if key == current_pid %} selected{% endif %}>{{ value }}</option>
						{% endfor %}
					</select>
				</div>
				<button class="planet-nav-btn next" onclick="location.href='?cp={{ nextPlanet }}'">
					<i class="fas fa-chevron-right"></i>
				</button>
			</div>
		</div>

        <!-- Right Section: User Icons -->
		<div class="header-right">
			{% if isModuleAvailable(constant('MODULE_MESSAGES')) %}
			<a href="game.php?page=messages" class="header-icon messages" title="{{ LNG.lm_messages }}">
				<i class="fas fa-envelope"></i>
				{% if new_message > 0 %}
				<span class="badge badge-pulse">{{ new_message > 99 ? '99+' : new_message }}</span>
				{% endif %}
			</a>
			{% endif %}
			<a href="game.php?page=settings" class="header-icon" title="{{ LNG.lm_settings }}">
				<i class="fas fa-cog"></i>
			</a>
			<a href="game.php?page=logout" class="header-icon logout" title="{{ LNG.lm_logout }}">
				<i class="fas fa-sign-out-alt"></i>
			</a>
		</div>
	</div>
</div>

<!-- Mobile Menu Overlay (separate, not covering header) -->
<div id="sidebar-overlay" class="sidebar-overlay" aria-hidden="true" style="top:60px"></div>