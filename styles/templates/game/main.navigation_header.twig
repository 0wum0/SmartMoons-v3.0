<!-- SmartMoons Top Navigation Bar -->
<div id="top-nav" class="sci-fi-top-nav">
	<div class="top-nav-container">
		<!-- Left Section: Quick Links -->
		<div class="top-nav-left">
			<a href="game.php?page=overview" class="nav-item" title="{{ LNG.lm_overview }}">
				<i class="fas fa-home"></i>
				<span class="nav-label">{{ LNG.lm_overview }}</span>
			</a>
			{% if isModuleAvailable(constant('MODULE_STATISTICS')) %}
			<a href="game.php?page=statistics" class="nav-item" title="{{ LNG.lm_statistics }}">
				<i class="fas fa-chart-line"></i>
				<span class="nav-label">{{ LNG.lm_statistics }}</span>
			</a>
			{% endif %}
			{% if isModuleAvailable(constant('MODULE_MESSAGES')) %}
			<a href="game.php?page=messages" class="nav-item messages" title="{{ LNG.lm_messages }}">
				<i class="fas fa-envelope"></i>
				{% if new_message > 0 %}
				<span class="badge badge-pulse">{{ new_message > 99 ? '99+' : new_message }}</span>
				{% endif %}
				<span class="nav-label">{{ LNG.lm_messages }}</span>
			</a>
			{% endif %}
		</div>

		<!-- Center Section: Planet Selector -->
		<div class="planet-selector-container">
			<button class="planet-nav-btn prev" onclick="location.href='?cp={{ previousPlanet }}'">
				<i class="fas fa-chevron-left"></i>
			</button>
			<div class="planet-selector">
				<label for="planetSelector" class="sr-only">{{ LNG.lm_planet }}</label>
				<select id="planetSelector" class="planet-dropdown">
					{% for key, value in PlanetSelect %}
					<option value="{{ key }}"{% if key == current_pid %} selected{% endif %}>{{ value }}</option>
					{% endfor %}
				</select>
			</div>
			<button class="planet-nav-btn next" onclick="location.href='?cp={{ nextPlanet }}'">
				<i class="fas fa-chevron-right"></i>
			</button>
		</div>

		<!-- Right Section: User Menu -->
		<div class="top-nav-right">
			<div class="server-time">
				<i class="fas fa-clock"></i>
				<span class="servertime">{{ servertime }}</span>
			</div>
			<a href="game.php?page=settings" class="nav-item" title="{{ LNG.lm_settings }}">
				<i class="fas fa-cog"></i>
			</a>
			<a href="game.php?page=logout" class="nav-item logout" title="{{ LNG.lm_logout }}">
				<i class="fas fa-power-off"></i>
			</a>
		</div>
	</div>
</div>

