<!-- SmartMoons Sci-Fi Header -->
<div id="top-header" class="sci-fi-header">
	<div class="header-container">
		<!-- Left Section: Logo & Burger Menu -->
		<div class="header-left">
			<button id="sidebar-toggle" class="burger-menu" aria-label="Toggle Menu">
				<span class="burger-line"></span>
				<span class="burger-line"></span>
				<span class="burger-line"></span>
			</button>
			<a href="game.php?page=overview" class="logo-link">
				<div class="logo-container">
					<i class="fas fa-rocket"></i>
					<span class="logo-text">SmartMoons</span>
				</div>
			</a>
		</div>

		<!-- Center Section: Server Time & Planet Selector -->
		<div class="header-center">
			<div class="server-time">
				<i class="fas fa-clock"></i>
				<span class="servertime" id="servertime">{{ servertime }}</span>
			</div>
			<div class="planet-selector-container">
				<button class="planet-nav-btn prev" onclick="location.href='?cp={{ previousPlanet }}'">
					<i class="fas fa-chevron-left"></i>
				</button>
				<div class="planet-selector">
					<select id="planetSelector" class="planet-dropdown">
						{% for key, value in PlanetSelect %}
						<option value="{{ key }}"{% if key == current_pid %} selected{% endif %}>{{ value }}</option>
						{% endfor %}
					</select>
				</div>
				<button class="planet-nav-btn next" onclick="location.href='?cp={{ nextPlanet }}'">
					<i class="fas fa-chevron-right"></i>
				</button>
			</div>
		</div>

		<!-- Right Section: User Icons -->
		<div class="header-right">
			{% if isModuleAvailable(constant('MODULE_MESSAGES')) %}
			<a href="game.php?page=messages" class="header-icon messages" title="{{ LNG.lm_messages }}">
				<i class="fas fa-envelope"></i>
				{% if new_message > 0 %}
				<span class="badge badge-pulse">{{ new_message > 99 ? '99+' : new_message }}</span>
				{% endif %}
			</a>
			{% endif %}
			<a href="game.php?page=settings" class="header-icon" title="{{ LNG.lm_settings }}">
				<i class="fas fa-cog"></i>
			</a>
			<a href="game.php?page=logout" class="header-icon logout" title="{{ LNG.lm_logout }}">
				<i class="fas fa-sign-out-alt"></i>
			</a>
		</div>
	</div>
</div>

<!-- Mobile Menu Overlay -->
<div id="sidebar-overlay" class="sidebar-overlay"></div>